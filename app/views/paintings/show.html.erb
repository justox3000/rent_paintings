<div class="container" id="painting-info">
  <div class="row">
    <div class="col-5">
      <%= cl_image_tag @painting.photo.key, width: 400, crop: :fit, class: "rounded" %>
    </div>
    <div class="col-6">
      <h2> <%= @painting.name %> </h2>
      <ul>
        <p> <strong>Artist: </strong><%= @painting.artist_name %> </li>
        <p> <strong>Year: </strong><%= @painting.year %> </li>
        <p> <strong>Price: </strong><%= @painting.price %> € </li>
      </ul>

        <div class="col ml-3">
      <%= simple_form_for([@painting, @booking]) do |f| %>
        <%= f.input :startdate %>
        <%= f.input :enddate %>
        <%= f.submit %>
      <% end %>

        <%# <div class="col">
          <%= link_to "Book now", "#", class: "btn btn-flat" %>



        <div class="row justify-content-end">
          <div class="col-2">
            <%= link_to "Back", root_path, class: "btn btn-ghost", id: "btn-back" %>
        </div>

      <div class="row justify-content-end">
        <div class="col-2">
          <%= link_to "Back", root_path, class: "btn btn-ghost", id: "btn-back" %>
        </div>
      </div>
    </div>
  </div>

  <% if @previous_booking %>
    <div class="form group row">
      <div class="col">
        <%# TODO: Notification to review.... %>
        <div class="alert alert-warning" role="alert">
          ⚠️ Please rate your recent booking!
        </div>
        <%= render "reviewform" %>
      </div>
    </div>
  <% end %>
  <% @painting.reviews.each do |review| %>
    <p><strong>Rating: </strong><%= review.rating %></p>
    <p><strong>Content: </strong><%= review.content %></p>
  <% end %>
</div>
